<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layoutDirection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_blue_300"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtCode"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutDirection"
            tools:text="2506" />

        <TextView
            android:id="@+id/txtTpTs"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            tools:text="PCA.RAMOS DE AZEVEDO" />

        <ImageView
            android:id="@+id/imgArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:src="@drawable/baseline_arrow_right_alt_24" />

        <TextView
            android:id="@+id/txtTsTp"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            tools:text="TERMINAL LAPA" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtIsCircular"
        android:layout_width="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutDirection"
        tools:text="false" />

    <TextView
        android:id="@+id/txtDirection"
        android:layout_width="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtIsCircular"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Terminal SecundÃ¡rio para Terminal Principal"/>

    <TextView
        android:id="@+id/txtSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtDirection"
        tools:text="8000" />


</androidx.constraintlayout.widget.ConstraintLayout>